<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="fleet_contrato_cancelacion_view_form" model="ir.ui.view">
            <field name="name">fleet.contrato.cancelacion.view.form</field>
            <field name="model">fleet.contrato.cancelacion</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <p>Usted esta a punto de cancelar un contrato, por favor seleccione un motivo</p>
                            <field name="motivo_id" required="1"/>
                        </group>
                    </sheet>
                    <footer>
                        <button type="object" name="action_confirm" string="Confirmar" class="btn-info text-white" />
                        <button string="Cancelar" special="cancel"  class="btn-danger"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>