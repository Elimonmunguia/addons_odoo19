<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="fleet_customer_flotilla_view_form" model="ir.ui.view">
            <field name="name">fleet.customer.flotilla.view.form</field>
            <field name="model">fleet.customer.flotilla</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name" required="1"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="fleet_customer_flotilla_view_list" model="ir.ui.view">
            <field name="name">fleet.customer.flotilla.view.list</field>
            <field name="model">fleet.customer.flotilla</field>
            <field name="arch" type="xml">
                <list>
                    <field name="id"/>
                    <field name="name"/>
                </list>
            </field>
        </record>

        <record id="fleet_customer_flotilla_action" model="ir.actions.act_window">
            <field name="name">Flotilla</field>
            <field name="res_model">fleet.customer.flotilla</field>
            <field name="view_mode">list,form</field>
            <field name="view_id" ref="fleet_customer_flotilla_view_list"/>
        </record>
    </data>
</odoo>

