<odoo>
    <data>
        <record id="agenda_entrega_actualizacion_mail_template" model="mail.template">
            <field name="name">Agenda entrega actualización</field>
            <field name="model_id" ref="model_agenda_entrega"/>
            <field name="subject">Su agenda entrega ha tenido actualización</field>
            <field name="body_html">
                <![CDATA[
                    <div style="box-sizing:border-box;font-size:13px;background-color: #FCFCFC; border-radius: 10px; padding: 20px; position: relative;">
                          <img src="https://www.aprecia.com.mx/firmas/Pilotea.png" alt="Logo" style="border-style:none;box-sizing:border-box;vertical-align:middle;position: absolute; top: 10px; right: 10px; height: 50px;" width="140.828" height="50">
                          <h2 style="margin:0px 0 6px 0;box-sizing:border-box;font-size:19.5px;color:#091124;line-height:1.2;text-align: center; font-weight: bold;">Actualizacion de etapa agenda</h2>
                          <br>
                          <span style="font-weight: bolder;">Etapa:</span> <t t-out="object.etapa_id.name" data-oe-t-inline="true" contenteditable="false"></t>
                          <br><br>
                          <span style="font-weight: bolder;">Cliente:</span> <t t-out="object.dictamen_id.cliente" data-oe-t-inline="true" contenteditable="false"></t>
                          <br><br>
                          <span style="font-weight: bolder;">Plaza:</span> <t t-out="object.dictamen_id.plaza_id.name" data-oe-t-inline="true" contenteditable="false"></t>
                          <br><br>
                          <span style="font-weight: bolder;">Asesor:</span> <t t-out="object.asesor_id.name" data-oe-t-inline="true" contenteditable="false"></t>
                          <br><br>
                          <span style="font-weight: bolder;">VIN:</span> <t t-out="object.dictamen_id.vin_sn" data-oe-t-inline="true" contenteditable="false"></t>
                          <br><br>
                          <span style="font-weight: bolder;">Estatus instrumentación:</span> <t t-out="object.req_instrumentacion.name" data-oe-t-inline="true" contenteditable="false"></t>
                          <br><br>
                          <span style="font-weight: bolder;">Estatus comprobante:</span> <t t-out="object.estatus_comprobante_deposito.name" data-oe-t-inline="true" contenteditable="false"></t>
                          <br><br>
                          <span style="font-weight: bolder;">Estatus dictamen:</span> <t t-out="object.dictamen.estatus_dictamen.x_name" data-oe-t-inline="true" contenteditable="false"></t>
                          <br>
                    </div>
                ]]>
            </field>
        </record>
    </data>
</odoo>