<odoo>
    <data>
        <record id="agenda_entrega_mail_template" model="mail.template">
            <field name="name">Agenda entrega</field>
            <field name="model_id" ref="model_agenda_entrega"/>
            <field name="subject">Nueva agenda de entrega</field>
            <field name="body_html">
                <![CDATA[
                    <div style="box-sizing:border-box;font-size:13px;background-color: #FCFCFC; border-radius: 10px; padding: 20px; position: relative;">
                      <img src="https://www.aprecia.com.mx/firmas/Pilotea.png" alt="Logo" style="border-style:none;box-sizing:border-box;vertical-align:middle;position: absolute; top: 10px; right: 10px; height: 50px;" width="140.82" height="50">
                      <h2 style="margin:0px 0 6px 0;box-sizing:border-box;font-size:19.5px;color:#091124;line-height:1.2;text-align: center; font-weight: bold;">Solicitud de entrega</h2>
                      <br>
                      Hola,<br><br>Se ha programado una nueva solicitud de entrega:<br><br>
                      <span style="font-weight: bolder;">Etapa:</span> <t t-out="object.etapa_id.name" data-oe-t-inline="true" contenteditable="false"></t>
                      <br><br>
                    </div>
                ]]>
            </field>
        </record>
    </data>
</odoo>