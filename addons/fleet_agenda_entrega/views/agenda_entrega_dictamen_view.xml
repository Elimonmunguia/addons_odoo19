<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="agenda_entrega_dictamen_view_form" model="ir.ui.view">
            <field name="name">agenda.entrega.dictamen.view.form</field>
            <field name="model">agenda.entrega.dictamen</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group string="Solicitud" name="data_solicitud">
                            <field name="landing_id"/>
                            <field name="status_dictamen"/>
                            <field name="asesor_id"/>
                        </group>
                        <group>
                            <group string="Información del vehículo" name="data_vehiculo">
                                <field name="vehiculo_id"/>
                                <field name="estado_vehiculo"/>
                                <field name="numero_economico"/>
                                <field name="vin_sn"/>
                                <field name="producto_id"/>
                                <field name="plaza_id"/>
                            </group>
                            <group string="Información del cliente" name="data_cliente">
                                <field name="cliente"/>
                                <field name="email_cliente" widget="email"/>
                                <field name="telefono_cliente" widget="phone"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="agenda_entrega_dictamen_view_list" model="ir.ui.view">
            <field name="name">agenda.entrega.dictamen.view.list</field>
            <field name="model">agenda.entrega.dictamen</field>
            <field name="arch" type="xml">
                <list>
                    <field name="id"/>
                    <field name="landing_id"/>
                    <field name="cliente"/>
                    <field name="vin_sn"/>
                    <field name="vehiculo_id"/>
                    <field name="plaza_id"/>
                    <field name="status_dictamen"/>
                    <field name="estado_vehiculo"/>
                </list>
            </field>
        </record>

        <record id="agenda_entrega_dictamen_action" model="ir.actions.act_window">
            <field name="name">Dictámen</field>
            <field name="res_model">agenda.entrega.dictamen</field>
            <field name="view_mode">list,form</field>
            <field name="view_id" ref="agenda_entrega_dictamen_view_list"/>
        </record>
    </data>
</odoo>