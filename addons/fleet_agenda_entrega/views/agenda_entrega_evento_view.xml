<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="agenda_entrega_evento_view_form" model="ir.ui.view">
            <field name="name">agenda.entrega.evento.view.form</field>
            <field name="model">agenda.entrega.evento</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <field name="mostrar_status" invisible="1"/>
                        <field name="mostrar_estatus" invisible="1"/>
                        <field name="status_id" widget="statusbar" domain="[('id', 'in', [1, 2, 3])]" invisible="mostrar_status == True"/>
                        <field name="estatus_id" widget="statusbar" invisible="mostrar_estatus == True"  options="{'clickable': '1'}"/>
                        <button name="action_solventar" type="object" class="btn btn-success" string="Solventar" invisible="status_id != 2"/>
                        <button name="action_reincidencia" type="object" class="btn btn-danger" string="Reincidencia" invisible="status_id != 2"/>
                        <button name="action_enviar_revision" type="object" class="btn btn-info" string="EnvÃ­ar a revisiÃ³n" invisible="status_id == 2 or estatus_id == 3 "/>
                    </header>
                    <sheet>
                        <group>
                            <field name="agenda_id" readonly="1"/>
                            <field name="tipo_evento_id" readonly="1"/>
                            <field name="descripcion" readonly="1"/>
                            <field name="descripcion_solventacion"/>
                        </group>
                    </sheet>
                    <chatter/>
                </form>
            </field>
        </record>

        <record id="agenda_entrega_evento_view_list" model="ir.ui.view">
            <field name="name">agenda.entrega.evento.view.list</field>
            <field name="model">agenda.entrega.evento</field>
            <field name="arch" type="xml">
                <list>
                    <field name="agenda_id" readonly="1"/>
                    <field name="tipo_evento_id" />
                    <field name="descripcion"/>
                    <field name="status_id" widget="badge" decoration-info="status_id == 1" decoration-warning="status_id == 2"
                           decoration-success="status_id == 3" decoration-danger="status_id == 4"/>
                    <field name="descripcion_solventacion"/>
                </list>
            </field>
        </record>

        <record id="agenda_entrega_evento_action" model="ir.actions.act_window">
            <field name="name">Eventos</field>
            <field name="res_model">agenda.entrega.evento</field>
            <field name="view_mode">list,form</field>
            <field name="view_id" ref="agenda_entrega_evento_view_list"/>
        </record>
    </data>
</odoo>