<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="agenda_entrega_lugar_view_form" model="ir.ui.view">
            <field name="name">agenda.entrega.lugar.view.form</field>
            <field name="model">agenda.entrega.lugar</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="plaza"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="agenda_entrega_lugar_view_list" model="ir.ui.view">
            <field name="name">agenda.entrega.lugar.view.list</field>
            <field name="model">agenda.entrega.lugar</field>
            <field name="arch" type="xml">
                <list>
                    <field name="id"/>
                    <field name="name"/>
                    <field name="plaza"/>
                </list>
            </field>
        </record>

        <record id="agenda_entrega_lugar_action" model="ir.actions.act_window">
            <field name="name">Lugar de entrega</field>
            <field name="res_model">agenda.entrega.lugar</field>
            <field name="view_mode">list,form</field>
            <field name="view_id" ref="agenda_entrega_lugar_view_list"/>
        </record>
    </data>
</odoo>