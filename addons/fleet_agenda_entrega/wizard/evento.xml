<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="evento_view_form" model="ir.ui.view">
            <field name="name">evento.view.form</field>
            <field name="model">agenda.entrega.evento.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="tipo_evento_id" required="1"/>
                            <field name="descripcion" required="1"/>
                        </group>
                    </sheet>
                    <footer>
                        <button name="action_confirm" string="Confirmar" type="object" class="btn btn-success"/>
                        <button string="Cancelar" special="cancel"  class="btn-danger"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>