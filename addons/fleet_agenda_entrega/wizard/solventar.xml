<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="solventar_view_form" model="ir.ui.view">
            <field name="name">solventar.view.form</field>
            <field name="model">evento.solventar.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="descripcion_solventacion" string="Descripción de solventación"/>
                        </group>
                    </sheet>
                    <footer>
                        <button name="action_solventar" string="Confirmar" type="object" class="btn btn-success"/>
                        <button string="Cancelar" special="cancel"  class="btn-danger"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>