<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="fleet_adecuacion_view_form" model="ir.ui.view">
            <field name="name">fleet.adecuacion.view.form</field>
            <field name="model">fleet.adecuacion</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group string="Datos de adecuación" name="data_adecuacion">
                                <field name="adecuacion_id"/>
                                <field name="fecha_instalacion"/>
                                <field name="num_serie"/>
                                <field name="imei"/>
                                <field name="marca"/>
                                <field name="modelo"/>
                                <field name="proveedor_id"/>
                            </group>
                            <group string="Importes" name="data_importe">
                                <field name="importe"/>
                                <field name="iva"/>
                                <field name="total"/>
                                <field name="instalacion_incluida" widget="boolean_toggle"/>
                                <field name="incluido_valor_vehiculo"/>
                                <field name="total_general"/>
                            </group>
                        </group>
                        <group string="Información del vehículo" name="data_vehiculo">
                            <field name="vehiculo_id" required="1"/>
                            <field name="vin_sn" readonly="1"/>
                            <field name="numero_economico" readonly="1"/>
                            <field name="producto_id" readonly="1"/>
                            <field name="plaza_id" readonly="1"/>
                        </group>

                        <notebook>
                            <page string="Costo de instalación" invisible="instalacion_incluida == True">
                                <group>
                                    <field name="instalacion_proveedor_id"/>
                                    <field name="instalacion_importe"/>
                                    <field name="instalacion_iva"/>
                                    <field name="instalacion_total"/>
                                </group>
                            </page>
                            <page string="Expediente">
                                <field name="expediente_arch" widget="pdf_viewer"/>
                            </page>
                        </notebook>
                    </sheet>
                    <chatter/>
                </form>
            </field>
        </record>

        <record id="fleet_adecuacion_view_list" model="ir.ui.view">
            <field name="name">fleet.adecuacion.view.list</field>
            <field name="model">fleet.adecuacion</field>
            <field name="arch" type="xml">
                <list>
                    <field name="id"/>
                    <field name="adecuacion_id"/>
                    <field name="vehiculo_id"/>
                    <!--<field name="vehiculo_id.vin_sn"/>-->
                    <field name="importe"/>
                    <field name="iva"/>
                    <field name="total"/>
                    <field name="expediente_arch"/>
                    <field name="total_general"/>
                </list>
            </field>
        </record>

        <record id="fleet_adecuacion_action" model="ir.actions.act_window">
            <field name="name">Adecuaciones</field>
            <field name="res_model">fleet.adecuacion</field>
            <field name="view_mode">list,form</field>
            <field name="view_id" ref="fleet_adecuacion_view_list"/>
        </record>
    </data>
</odoo>