<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="fleet_movimiento_misc_view_form" model="ir.ui.view">
            <field name="name">fleet.movimiento.misc.view.form</field>
            <field name="model">fleet.movimiento.misc</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="action_pago" type="object" string="Realizar pago" class="btn-success text-white"/>
                        <field name="etapa_id" widget="statusbar" options="{'clickable': True}"/>
                    </header>
                    <sheet>
                        <group>
                            <group string="Datos del movimiento" name="data_movimiento">
                                <field name="fecha_registro" required="1"/>
                                <field name="fecha_movimiento"/>
                                <field name="fecha_vencimiento"/>
                                <field name="tipo_movimiento_id"/>
                                <field name="folio"/>
                                <field name="motivo_id"/>
                                <field name="conductor"/>
                                <field name="estado_id"/>
                                <field name="estado_code" invisible="1"/>
                                <field name="municipio_id" domain="[('code', '=', estado_code)]" invisible="estado_code == False"/>
                                <field name="descripcion"/>
                            </group>
                            <group string="Importes" name="data_importe">
                                <field name="importe"/>
                                <field name="aplica_iva" widget="boolean_toggle"/>
                                <field name="iva"/>
                                <field name="total"/>
                                <field name="folio_factura"/>
                                <field name="importe_pagado"/>
                                <field name="importe_pendiente"/>
                                <field name="fecha_ultimo_pago"/>
                            </group>
                        </group>
                        <group string="Contrato" name="data_contrato">
                            <field name="contrato_id" domain="[('vehicle_id', '=', vehiculo_id)]"/>
                            <field name="cliente_id" readonly="1" string="Arrendatario"/>
                        </group>
                        <group string="Proveedor" name="data_proveedor">
                            <field name="proveedor_id"/>
                            <field name="proveedor_telefono" widget="phone"/>
                        </group>
                        <group string="Información del vehículo" name="data_vehiculo">
                            <field name="vehiculo_id" required="1"/>
                            <field name="matricula" readonly="1"/>
                            <field name="numero_economico" readonly="1"/>
                            <field name="vin_sn" readonly="1"/>
                            <field name="producto_id" readonly="1"/>
                            <field name="plaza_id" readonly="1"/>
                        </group>
                        <notebook>
                            <page string="Expediente" name="expediente">
                                <field name="attach_movimiento" widget="pdf_viewer"/>
                            </page>
                        </notebook>
                    </sheet>
                    <chatter/>
                </form>
            </field>
        </record>

        <record id="fleet_movimiento_misc_view_list" model="ir.ui.view">
            <field name="name">fleet.movimiento.misc.view.list</field>
            <field name="model">fleet.movimiento.misc</field>
            <field name="arch" type="xml">
                <list>
                    <field name="id"/>
                    <field name="fecha_movimiento"/>
                    <field name="tipo_movimiento_id"/>
                    <field name="folio"/>
                    <field name="motivo_id"/>
                    <field name="contrato_id"/>
                    <field name="importe"/>
                    <field name="importe_pendiente"/>
                </list>
            </field>
        </record>

        <record id="fleet_movimiento_misc_action" model="ir.actions.act_window">
            <field name="name">Movimientos</field>
            <field name="res_model">fleet.movimiento.misc</field>
            <field name="view_mode">list,form</field>
            <field name="view_id" ref="fleet_movimiento_misc_view_list"/>
        </record>
    </data>
</odoo>