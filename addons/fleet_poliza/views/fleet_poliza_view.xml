<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="fleet_poliza_view_form" model="ir.ui.view">
            <field name="name">fleet.poliza.view.form</field>
            <field name="model">fleet.poliza</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group string="Datos de póliza" name="data_poliza">
                                <field name="num_poliza"/>
                                <field name="proveedor_id"/>
                                <field name="tipo_cobertura_id"/>
                                <field name="fecha_inicio"/>
                                <field name="fecha_vencimiento"/>
                                <field name="tipo_valor_id"/>
                            </group>
                            <group string="Importes" name="data_importe">
                                <field name="prima_neta"/>
                                <field name="gasto_expedicion"/>
                                <field name="iva"/>
                                <field name="importe_total"/>
                            </group>
                        </group>
                        <group string="Información del vehículo" name="data_vehiculo">
                            <field name="vehiculo_id" required="1"/>
                            <field name="vin_sn" readonly="1"/>
                            <field name="numero_economico" readonly="1"/>
                            <field name="producto_id" readonly="1"/>
                            <field name="plaza_id" readonly="1"/>
                        </group>
                        <notebook>
                            <page string="Expediente" name="expediente">
                                <field name="attach_poliza" widget="pdf_viewer"/>
                            </page>
                        </notebook>
                    </sheet>
                    <chatter/>
                </form>
            </field>
        </record>

        <record id="fleet_poliza_view_list" model="ir.ui.view">
            <field name="name">fleet.poliza.view.list</field>
            <field name="model">fleet.poliza</field>
            <field name="arch" type="xml">
                <list>
                    <field name="id"/>
                    <field name="num_poliza"/>
                    <field name="proveedor_id"/>
                    <field name="vehiculo_id"/>
                    <field name="vin_sn"/>
                    <field name="fecha_inicio"/>
                    <field name="fecha_vencimiento"/>
                    <field name="tipo_cobertura_id"/>
                    <field name="prima_neta"/>
                    <field name="gasto_expedicion"/>
                    <field name="iva"/>
                    <field name="importe_total"/>
                    <field name="attach_poliza"/>
                </list>
            </field>
        </record>

        <record id="fleet_poliza_action" model="ir.actions.act_window">
            <field name="name">Polizas</field>
            <field name="res_model">fleet.poliza</field>
            <field name="view_mode">list,form</field>
            <field name="view_id" ref="fleet_poliza_view_list"/>
        </record>
    </data>
</odoo>