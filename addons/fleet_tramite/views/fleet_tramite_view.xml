<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="fleet_tramite_view_form" model="ir.ui.view">
            <field name="name">fleet.tramite.view.form</field>
            <field name="model">fleet.tramite</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group string="Datos de trámite" name="data_tramite">
                                <field name="tipo_tramite_id"/>
                                <field name="folio"/>
                                <field name="fecha_tramite"/>
                                <field name="fecha_vencimiento_renovacion"/>
                                <field name="dependencia"/>
                                <field name="estado"/>
                                <field name="motivo_pago_id"/>
                            </group>
                            <group string="Importes" name="data_importe">
                                <field name="importe"/>
                                <field name="aplica_iva"  widget="boolean_toggle"/>
                                <field name="iva"/>
                                <field name="total"/>
                            </group>
                        </group>
                        <group string="Información del vehículo" name="data_vehiculo">
                            <field name="vehiculo_id" required="1"/>
                            <field name="vin_sn" readonly="1"/>
                            <field name="numero_economico" readonly="1"/>
                            <field name="producto_id" readonly="1"/>
                            <field name="plaza_id" readonly="1"/>
                        </group>
                        <group string="Observaciones" name="observacion">
                            <field name="observacion"/>
                        </group>
                        <notebook>
                            <page string="Expediente" name="expediente">
                                <field name="expediente" widget="pdf_viewer"/>
                            </page>
                        </notebook>
                    </sheet>
                    <chatter />
                </form>
            </field>
        </record>

        <record id="fleet_tramite_view_list" model="ir.ui.view">
            <field name="name">fleet.tramite.view.list</field>
            <field name="model">fleet.tramite</field>
            <field name="arch" type="xml">
                <list>
                    <field name="plaza_id"/>
                    <field name="numero_economico"/>
                    <field name="vin_sn"/>
                    <field name="tipo_tramite_id"/>
                    <field name="fecha_tramite"/>
                    <field name="fecha_vencimiento_renovacion"/>
                    <field name="importe"/>
                    <field name="iva"/>
                    <field name="total"/>
                </list>
            </field>
        </record>

        <record id="fleet_tramite_action" model="ir.actions.act_window">
            <field name="name">Trámites</field>
            <field name="res_model">fleet.tramite</field>
            <field name="view_mode">list,form</field>
            <field name="view_id" ref="fleet_tramite_view_list"/>
        </record>
    </data>
</odoo>