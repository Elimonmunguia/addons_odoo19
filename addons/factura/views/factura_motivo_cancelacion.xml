<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="factura_motivo_cancelacion_view_form" model="ir.ui.view">
            <field name="name">factura.motivo.cancelacion.view.form</field>
            <field name="model">factura.motivo.cancelacion</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="motivo_duplicado"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="factura_motivo_cancelacion_view_list" model="ir.ui.view">
            <field name="name">factura.motivo.cancelacion.view.list</field>
            <field name="model">factura.motivo.cancelacion</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                    <field name="motivo_duplicado"/>
                </list>
            </field>
        </record>

        <record id="factura_motivo_cancelacion_action" model="ir.actions.act_window">
            <field name="name">Motivos de cancelaci√≥n</field>
            <field name="res_model">factura.motivo.cancelacion</field>
            <field name="view_mode">list,form</field>
            <field name="view_id" ref="factura_motivo_cancelacion_view_list"/>
        </record>
    </data>
</odoo>