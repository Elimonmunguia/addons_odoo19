<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="factura_modal_informativo_view_form" model="ir.ui.view">
            <field name="name">factura.modal.informativo.view.form</field>
            <field name="model">factura.modal.informativo</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="mensaje" readonly="1"/>
                        </group>
                        <footer>
                            <button name="action_close" type="object" string="cerrar" class="btn-primary"/>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>