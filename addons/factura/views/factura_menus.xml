<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="factura_contabilidad_action" model="ir.actions.act_window">
            <field name="name">Facturas</field>
            <field name="res_model">account.move</field>
            <field name="view_mode">list,form</field>
            <field name="domain">[('move_type', '=', 'in_invoice')]</field>
            <field name="context">{'default_move_type': 'in_invoice'}</field>
        </record>


        <record id="factura_unspsc_action" model="ir.actions.act_window">
            <field name="name">action.unspsc</field>
            <field name="res_model">product.unspsc.code</field>
            <field name="view_mode">list,form</field>
            <field name="view_id" ref="product_unspsc.view_product_uom_categ_tree_unspsc"/>
        </record>

        <menuitem id="menu_factura_root"
          name="Facturas"
          sequence="1"
          web_icon="factura,static/src/description/icon.png" />

        <menuitem id="factura_dashboard"
                  name="Tablero"
                  parent="menu_factura_root"
                  sequence="10"
                  action="factura_dashboard_invoice_action"/>

        <menuitem id="factura_menu"
                  name="Facturas"
                  parent="menu_factura_root"
                  sequence="20"
                  action="factura_contabilidad_action"/>

        <menuitem id="factura_producto_categoria_menu"
                  name="Códigos Unspsc"
                  parent="account.menu_finance_configuration"
                  sequence="1"
                  action="factura_unspsc_action"/>

        <menuitem id="factura_motivo_cancelacion_menu"
                  name="Motivos de cancelación"
                  parent="account.menu_finance_configuration"
                  sequence="4"
                  action="factura_motivo_cancelacion_action"/>

        <menuitem id="factura_unspsc_categoria_menu"
                  name="Categorias SAT"
                  parent="account.menu_finance_configuration"
                  sequence="2"
                  action="factura_unspsc_categoria_action"/>

        <menuitem id="factura_monto_autorizado_menu"
                  name="Montos autorizados"
                  parent="account.menu_finance_configuration"
                  sequence="3"
                  action="factura_monto_autorizado_action"/>

        <menuitem id="factura_modelo_vin_menu"
                  name="Prefijos VIN"
                  parent="account.menu_finance_configuration"
                  sequence="4"
                  action="factura_modelo_vin_action"/>
    </data>
</odoo>