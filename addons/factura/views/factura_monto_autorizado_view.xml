<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="factura_monto_autorizado_view_form" model="ir.ui.view">
            <field name="name">factura.monto.autorizado.view.form</field>
            <field name="model">factura.monto.autorizado</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="grupo"/>
                            <field name="monto_autorizado"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="factura_monto_autorizado_view_list" model="ir.ui.view">
            <field name="name">factura.monto.autorizado.view.list</field>
            <field name="model">factura.monto.autorizado</field>
            <field name="arch" type="xml">
                <list>
                    <field name="grupo"/>
                    <field name="monto_autorizado"/>
                </list>
            </field>
        </record>


        <record id="factura_monto_autorizado_action" model="ir.actions.act_window">
            <field name="name">Montos autorizados</field>
            <field name="res_model">factura.monto.autorizado</field>
            <field name="view_mode">list,form</field>
            <field name="view_id" ref="factura_monto_autorizado_view_list"/>
        </record>
    </data>
</odoo>