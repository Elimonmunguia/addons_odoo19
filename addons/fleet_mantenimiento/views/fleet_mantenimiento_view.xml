<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="fleet_mantenimiento_view_form" model="ir.ui.view">
            <field name="name">fleet.mantenimiento.view.form</field>
            <field name="model">fleet.mantenimiento</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <field name="etapa_id" widget="statusbar" options="{'clickable': '1'}"/>
                    </header>
                    <sheet>
                        <group>
                            <group string="Datos de mantenimiento" name="data_mantenimiento">
                                <field name="mostrar_tipo_mant_serv" invisible="1"/>
                                <field name="mostrar_servicios" invisible="1"/>
                                <field name="fecha_programado"/>
                                <field name="proveedor_id"/>
                                <field name="folio"/>
                                <field name="tipo_mantenimiento_id"/>
                                <field name="tipo_mantenimiento_servicio_id" domain="[('mantenimiento_tipo_id', '=', tipo_mantenimiento_id)]" invisible="mostrar_tipo_mant_serv"/>
                                <field name="servicios_ids" widget="many2many_list" invisible="mostrar_servicios"/>
                                <field name="indicador_actualizacion"/>
                                <field name="observacion"/>
                            </group>
                            <group string="Importes" name="data_importe">
                                <field name="importe"/>
                                <field name="iva" readonly="1"/>
                                <field name="total" readonly="1"/>
                            </group>
                        </group>
                        <group string="Fechas de mantenimiento" name="data_fechas">
                                <field name="fecha_deteccion"/>
                                <field name="km_deteccion"/>
                                <field name="fecha_hora_entrada"/>
                                <field name="km_entrada"/>
                                <field name="fecha_hora_salida"/>
                        </group>
                        <group>
                            <group string="Información del vehiculo" name="data_vehiculo">
                                <field name="vehiculo_id" required="1"/>
                                <field name="vin_sn" readonly="1"/>
                                <field name="numero_economico" readonly="1"/>
                                <field name="producto_id" readonly="1"/>
                                <field name="plaza_id" readonly="1"/>
                            </group>
                            <group string="Información del conductor" name="data_conductor">
                                <field name="conductor_id" readonly="1"/>
                                <field name="conductor_email" readonly="1"/>
                                <field name="conductor_telefono" readonly="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Expediente" name="expediente">
                                <group>
                                    <group>
                                        <field name="expediente_digital" widget="pdf_viewer"/>
                                    </group>
                                    <group>
                                        <field name="expediente_fotografico" widget="image"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Factura" name="factura">
                                <group>
                                    <field name="numero_factura"/>
                                    <field name="fecha_factura"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <chatter/>
                </form>
            </field>
        </record>

        <record id="fleet_mantenimiento_view_list" model="ir.ui.view">
            <field name="name">fleet.mantenimiento.view.list</field>
            <field name="model">fleet.mantenimiento</field>
            <field name="arch" type="xml">
                <list>
                    <field name="id"/>
                    <field name="plaza_id"/>
                    <field name="vehiculo_id"/>
                    <field name="vin_sn"/>
                    <field name="km_entrada"/>
                    <field name="total"/>
                    <field name="importe"/>
                    <field name="tipo_mantenimiento_id"/>
                    <field name="numero_factura"/>
                </list>
            </field>
        </record>

        <record id="fleet_mantenimiento_action" model="ir.actions.act_window">
            <field name="name">Mantenimientos</field>
            <field name="res_model">fleet.mantenimiento</field>
            <field name="view_mode">list,form</field>
            <field name="view_id" ref="fleet_mantenimiento_view_list"/>
        </record>
    </data>
</odoo>