<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="cliente_fleet_inherit_view_form" model="ir.ui.view">
            <field name="name">cliente.fleet.inherit.view.form</field>
            <field name="model">fleet.vehicle</field>
            <field name="inherit_id" ref="fleet.fleet_vehicle_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='driver_id']" position="replace">
                    <field name="driver_id" domain="[('es_cliente', '=', True)]" widget="many2one_avatar"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>